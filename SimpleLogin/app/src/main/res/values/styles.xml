<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorItemBackground</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="materialAlertDialogTheme">@style/SLMaterialAlertDialog</item>
        <item name="android:navigationBarColor">@color/colorListBackground</item>
    </style>

    <style name="HomeActivityTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!--Custom MaterialAlertDialogTheme-->
    <style name="SLMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNeutralButtonStyle">@style/SLMaterialAlertButtonNeutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/SLMaterialAlertButtonNegative</item>
        <item name="buttonBarPositiveButtonStyle">@style/SLMaterialAlertButtonPositive</item>
        <item name="materialAlertDialogTitleTextStyle">@style/SLMaterialDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/SLMaterialDialogBodyTextStyle</item>
    </style>

    <style name="SLMaterialAlertButtonNeutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="SLMaterialAlertButtonNegative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorNegative</item>
    </style>

    <style name="SLMaterialAlertButtonPositive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fillColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SLMaterialDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="SLMaterialDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>
    <!--End of: Custom MaterialAlertDialogTheme-->

    <style name="SlAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="textAppearanceListItemSmall">?attr/textAppearanceSubtitle2</item>
        <item name="textColorAlertDialogListItem">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
    </style>


    <!-- Stjin - Custom textviews -->
</resources>
